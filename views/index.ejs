<!DOCTYPE html>
<html>

<head>
    <style>
        html,body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #222;
        }
        #myCanvas {
            border:4px solid #000000;
            background-color: rgb(160, 133, 189);
            max-width: 100%;
            max-height: 100%;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }
    </style>
</head>

<body>

    <canvas id="myCanvas" width="1280" height="720"></canvas>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const canvas = document.getElementById('myCanvas');
        const ctx = canvas.getContext('2d');
        const socket = io();

        const cw = 1280;
        const ch = 720;

        let role = 'spectator';
        socket.on('role', (assignedRole) => {
            role = assignedRole;
            console.log('Assigned role:', role);
        });

        let gameState = {
            p1: { y: ch / 2 - 50, score: 0 },
            p2: { y: ch / 2 - 50, score: 0 },
            ball: { x: cw / 2, y: ch / 2, radius: 15 }
        };

        socket.on('gameState', (state) => {
            gameState = state;
        });

        const keys = { w: false, s: false, ArrowUp: false, ArrowDown: false };

        window.addEventListener('keydown', (e) => {
            if (['w', 's', 'ArrowUp', 'ArrowDown'].includes(e.key)) {
                keys[e.key] = true;
            }
        });

        window.addEventListener('keyup', (e) => {
            if (['w', 's', 'ArrowUp', 'ArrowDown'].includes(e.key)) {
                keys[e.key] = false;
            }
        });

        setInterval(() => {
            if (role === 'p1' || role === 'p2') {
                if (keys.w || keys.ArrowUp) socket.emit('move', 'up');
                if (keys.s || keys.ArrowDown) socket.emit('move', 'down');
            }
        }, 1000 / 60);

        function drawTable() {
            ctx.fillStyle = "#0b3d91";
            ctx.fillRect(100, 40, cw - 200, ch - 80);

            // Middle Line
            ctx.strokeStyle = "white";
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(cw / 2, 40);
            ctx.lineTo(cw / 2, ch - 40);
            ctx.stroke();

            // Center Circle
            ctx.beginPath();
            ctx.arc(cw / 2, ch / 2, 50, 0, Math.PI * 2);
            ctx.stroke();

            // Scores
            ctx.font = "40px Arial";
            ctx.fillStyle = "white";
            ctx.fillText(gameState.p1.score, cw / 4, 100);
            ctx.fillText(gameState.p2.score, (cw / 4) * 3, 100);

            // Role indicator
            ctx.font = "20px Arial";
            ctx.fillStyle = "rgba(255,255,255,0.7)";
            ctx.fillText("You are: " + role, 10, 30);
        }

        function drawPaddle(x, y, color) {
            ctx.fillStyle = color;
            ctx.shadowBlur = 15;
            ctx.shadowColor = color;
            ctx.fillRect(x, y, 20, 100);
            ctx.shadowBlur = 0;
        }

        function drawBall(x, y, radius) {
            ctx.beginPath();
            ctx.fillStyle = "white";
            ctx.arc(x, y, radius, 0, Math.PI * 2);
            ctx.fill();
            ctx.closePath();
        }

        function render() {
            ctx.clearRect(0, 0, cw, ch);
            
            drawTable();
            drawPaddle(120, gameState.p1.y, "red");
            drawPaddle(cw - 140, gameState.p2.y, "lime");
            drawBall(gameState.ball.x, gameState.ball.y, gameState.ball.radius);

            requestAnimationFrame(render);
        }

        render();
    </script>
</body>

</html>